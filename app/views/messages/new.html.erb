<div class="banner-contact">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">

        <%= form_for @message, url: create_message_url do |f| %>
            <%= notice %>
            <%= @message.errors.full_messages.join(', ') %>
            <h2>Keep in touch</h2>

            <div class="form-inputs">
              <div class="form-group">
                <%= f.label :name, 'Name' %>
                <%= f.text_field :name, required: true, placeholder: '', style:"width: 100%" %>
              </div>
              <div class="form-group">
                <%= f.label :email, 'Email' %>
                <%= f.email_field :email, required: true, placeholder: '', style:"width: 100%" %>
              </div>
              <div class="form-group">
                <%= f.label :company, 'Company' %>
                <%= f.text_field :company, placeholder: '', style:"width: 100%" %>
              </div>
              <div class="form-group">
                <%= f.label :body, 'Message' %>
                <%= f.text_area :body, required: true, placeholder: '...', style:"width: 100%" %>
                <br>
                <%= f.submit 'Send', class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>


  </div>
</div>







